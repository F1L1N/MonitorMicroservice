@model MonitorMicroservice.Models.Hospital
@{
    ViewBag.Title = "Удаление больницы";
}

<div>
    <dl class="dl-horizontal">
        <dt>Полное наименование</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <div>
        <form asp-controller="hospital" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>