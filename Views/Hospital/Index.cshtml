@model IEnumerable<MonitorMicroservice.Models.Hospital>
@{
    ViewBag.Title = "Все больницы";
}
<a asp-action="Create">Добавить больницу</a>
<table class="table">

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <a asp-action="Details" asp-controller="Hospital" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Edit" asp-controller="Hospital" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="Hospital" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>